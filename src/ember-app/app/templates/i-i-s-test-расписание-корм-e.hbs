<h3 class="ui header">{{t "forms.i-i-s-test-расписание-корм-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.время
      class=(if (v-get validationModel "время" "isInvalid") "error")
      label=(t "forms.i-i-s-test-расписание-корм-e.время-caption")
      data-test-i-i-s-test-расписание-корм-e-время=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "время" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-test-расписание-корм-e.животные-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.животные
      displayAttributeName="кодВида"
      autocomplete=true
      relationName="животные"
      projection="ЖивотныеL"
      title=(t "forms.i-i-s-test-расписание-корм-e.животные-caption")
      readonly=readonly
      componentName="животныеLookup"
      class=(if (v-get validationModel "животные" "isInvalid") "error")
      data-test-i-i-s-test-расписание-корм-e-животные=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "животные" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.животные.сотрудники.табличНомер
      class=(if (v-get validationModel.животные.сотрудники "табличНомер" "isInvalid") "error")
      label=(t "forms.i-i-s-test-расписание-корм-e.животные.сотрудники.табличНомер-caption")
      data-test-i-i-s-test-расписание-корм-e-животные-сотрудники-табличНомер=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.животные.сотрудники "табличНомер" "message")}}
  </div>
</form>
